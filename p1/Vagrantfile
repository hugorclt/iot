# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
    config.vm.define "hrecoletS" do |server|
      # Operating system
      server.vm.box = "debian/bookworn64"
      
      # Ressource
      server.memory = 512
      server.cpus = 1

      #Network
      config.vm.network "public_network", ip: "192.168.56.110"
    end

    config.vm.define "hrecoletSW" do |worker|
      # Operatin system
      worker.vm.box = "debian/bookworm64"
      
      # Ressource
      server.memory = 512
      server.cpus = 1

      #Network
      config.vm.network "public_network", ip: "192.168.56.111"
    end
end
